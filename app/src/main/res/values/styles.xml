<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ingredients_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:padding">@dimen/spacing</item>
    </style>

    <style name="recipe_card_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/recipe_card_height</item>
        <item name="android:background">@drawable/card_style</item>
        <item name="android:padding">@dimen/large_spacing</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
